<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.demoaccessories">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/meo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".views.activity.DetailsUserActivity"></activity>
        <activity android:name=".views.activity.DetailsProductUserActivity" />
        <activity android:name=".views.activity.DetailsProfileActivity" />
        <activity android:name=".views.activity.ForgotPasswordActivity" />
        <activity android:name=".views.activity.UpdateUserActivity" />
        <activity android:name=".views.activity.AddProductActivity" />
        <activity android:name=".views.activity.DetailsProductActivity" />
        <activity android:name=".views.activity.SignUpActivity" />
        <activity android:name=".views.activity.LoginActivity" />
        <activity android:name=".views.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>