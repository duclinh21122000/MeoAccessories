<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐỔI MẬT KHẨU"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:id="@+id/tv_tittle"
        android:textColor="@color/orange"
        android:fontFamily="@font/open_sans_semi_bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv_tittle"
        android:id="@+id/view1">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/orange"
            android:backgroundTint="@color/orange"
            android:theme="@style/textInput">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu của bạn"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textColor="#f96506"
                android:inputType="textPassword"
                android:backgroundTint="@color/orange"
                android:id="@+id/edt_old_password" />
        </com.google.android.material.textfield.TextInputLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/progressBar"
            android:visibility="gone"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/splash_gradient"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10dp"
            android:text="NHẬP"
            android:textColor="#fff"
            android:id="@+id/btn_send_password"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/tv_tittle"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:id="@+id/view2"
        android:visibility="gone">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:textColorHint="@color/orange"
            app:boxBackgroundColor="@color/orange"
            android:theme="@style/textInput">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu mới"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textColor="#f96506"
                android:inputType="textPassword"
                android:backgroundTint="@color/orange"
                android:id="@+id/edt_new_password" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:textColorHint="@color/orange"
            app:boxBackgroundColor="@color/orange"
            android:theme="@style/textInput">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textColor="#f96506"
                android:inputType="textPassword"
                android:backgroundTint="@color/orange"
                android:id="@+id/edt_reNew_password" />
        </com.google.android.material.textfield.TextInputLayout>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/progressBar1"
            android:visibility="gone"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/splash_gradient"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10dp"
            android:text="Đổi mật khẩu"
            android:textColor="#fff"
            android:id="@+id/btn_change_password"/>
    </LinearLayout>
</RelativeLayout>