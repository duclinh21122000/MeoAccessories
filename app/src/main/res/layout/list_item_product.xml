<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/meo"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                android:id="@+id/img_seller"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/img_seller"
                android:layout_centerVertical="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mèo Accessories"
                        android:textStyle="bold"
                        android:textColor="@color/orange"
                        android:id="@+id/tv_name_seller"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_name_seller"
                        android:text="đã thêm một mặt hàng để bán."
                        android:layout_marginLeft="3dp"
                        android:textSize="14sp"
                        android:id="@+id/tv_title_notification"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="03/20/2020 lúc 10:26"
                        android:textSize="11sp"
                        android:id="@+id/tv_date_time"/>
                    <ImageView
                        android:layout_width="16sp"
                        android:layout_height="16sp"
                        android:layout_toRightOf="@id/tv_date_time"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_baseline_public_24"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description_product"
                android:lineSpacingExtra="5dp"
                android:textSize="16sp"
                android:layout_margin="5dp"
                android:fontFamily="@font/open_sans_regular"
                android:id="@+id/tv_description_product"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/bangdan"
                android:id="@+id/img_product"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BBBBBB" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rlt_like"
                android:clickable="true"
                android:focusable="true">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_like_1"
                        android:id="@+id/img_like" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thích"
                        android:layout_toRightOf="@id/img_like"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans_semi_bold"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rlt_comment">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_comment_1"
                        android:id="@+id/img_comment" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bình luận"
                        android:layout_toRightOf="@id/img_comment"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans_semi_bold"/>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rlt_share">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/ic_share_1"
                        android:id="@+id/img_share"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chia sẻ"
                        android:layout_toRightOf="@id/img_share"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans_semi_bold"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BBBBBB"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>