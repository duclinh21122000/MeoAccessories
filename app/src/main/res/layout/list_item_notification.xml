<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/meo"
            app:civ_border_color="@color/white"
            app:civ_border_width="2dp"
            android:id="@+id/img_admin"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/img_admin"
            android:layout_centerVertical="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mèo Accessories"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:id="@+id/tv_name_admin"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_name_admin"
                    android:text="đã thêm một mặt hàng để bán."
                    android:layout_marginLeft="3dp"
                    android:textSize="14sp"
                    android:id="@+id/tv_title_notification"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03/20/2020 lúc 10:26"
                    android:textSize="12sp"
                    android:id="@+id/tv_date_time"/>
                <ImageView
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_toRightOf="@id/tv_date_time"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_baseline_public_24"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>