<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".views.activity.LoginActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="ĐĂNG NHẬP"
        android:textColor="@color/orange"
        android:fontFamily="@font/open_sans_semi_bold"
        android:textSize="24sp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="25dp"
        android:elevation="16sp"
        app:cardCornerRadius="10dp"
        android:id="@+id/card_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:textColorHint="@color/orange"
                app:boxBackgroundColor="@color/orange"
                android:theme="@style/textInput">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:paddingLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="#f96506"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="@color/orange"
                    android:id="@+id/edt_email"
                    android:text="duongduclinh2207@gmail.com"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/orange"
                android:backgroundTint="@color/orange"
                android:theme="@style/textInput">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mật khẩu"
                    android:paddingLeft="5dp"
                    android:textSize="18sp"
                    android:textColor="#f96506"
                    android:inputType="textPassword"
                    android:text="123456789"
                    android:backgroundTint="@color/orange"
                    android:id="@+id/edt_password" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Quên mật khẩu?"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/orange"
                android:id="@+id/tv_forgot_pass"/>
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/progressBar" />
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:background="@drawable/splash_gradient"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:text="ĐĂNG NHẬP"
                android:textColor="#fff"
                android:id="@+id/btn_login"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans_regular"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:text="Bạn chưa có tài khoản? Đăng ký ngay!"
        android:id="@+id/tv_register"/>
</RelativeLayout>