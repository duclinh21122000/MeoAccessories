<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.DetailsProductUserActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ln_view1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/meo"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    android:id="@+id/img_admin"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img_admin"
                    android:layout_centerVertical="true"
                    android:id="@+id/view1">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mèo Accessories"
                            android:textStyle="bold"
                            android:textColor="@color/orange"
                            android:id="@+id/tv_name_seller"
                            android:textSize="16sp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="03/20/2020 lúc 10:26"
                            android:textSize="11sp"
                            android:id="@+id/tv_date_time"/>
                        <ImageView
                            android:layout_width="16sp"
                            android:layout_height="16sp"
                            android:layout_toRightOf="@id/tv_date_time"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/ic_baseline_public_24"/>
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_baseline_close_24"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/img_close"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description_product"
                    android:lineSpacingExtra="5dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans_semi_bold"
                    android:id="@+id/tv_description_product"
                    android:layout_marginHorizontal="10dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/bangdan"
                    android:id="@+id/img_product"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#EEEEEE">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/btn_send_messenger"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7000đ"
                            android:textSize="16sp"
                            android:id="@+id/tv_price_product"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_price_product"
                            android:text=" - "
                            android:id="@+id/tv_dot"
                            android:textSize="14sp"
                            android:textStyle="bold"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_dot"
                            android:text="Huyện EaH'Leo"
                            android:textSize="16sp"
                            android:id="@+id/tv_address"/>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Băng dán cá nhân"
                        android:textStyle="bold"
                        android:textColor="@color/orange"
                        android:textSize="18sp"
                        android:id="@+id/tv_name_product"/>
                </LinearLayout>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_button"
                    android:layout_alignParentRight="true"
                    android:text="Nhắn tin"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:id="@+id/btn_send_messenger"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                android:layout_marginHorizontal="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rlt_like"
                    android:clickable="true"
                    android:focusable="true">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_like_1"
                            android:id="@+id/img_like"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/tv_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_toRightOf="@id/img_like"
                            android:fontFamily="@font/open_sans_semi_bold"
                            android:text="Thích"
                            android:textSize="14sp" />
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rlt_comment">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_comment_1"
                            android:id="@+id/img_comment" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bình luận"
                            android:layout_toRightOf="@id/img_comment"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:fontFamily="@font/open_sans_semi_bold"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/rlt_share">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/ic_share_1"
                            android:id="@+id/img_share"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chia sẻ"
                            android:layout_toRightOf="@id/img_share"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:fontFamily="@font/open_sans_semi_bold"/>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BBBBBB"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rv_list_comment"
                android:layout_marginHorizontal="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/meo"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/img_user"
                    android:layout_centerVertical="true"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_toRightOf="@id/img_user"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/shape_edt"
                    android:hint="Viết bình luận..."
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:layout_marginRight="30dp"
                    android:layout_centerVertical="true"
                    android:paddingRight="10dp"
                    android:id="@+id/edt_comment"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_baseline_send_24"
                    android:layout_marginRight="5dp"
                    android:id="@+id/img_send_comment"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>