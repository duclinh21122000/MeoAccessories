<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activity.DetailsUserActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/orange"/>
        </FrameLayout>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_margin="10dp"
            android:id="@+id/img_back"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_delete_24"
            android:layout_margin="10dp"
            android:id="@+id/img_delete"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Mèo Accessories"
            android:fontFamily="@font/dancing_script"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:id="@+id/id_cover"
            android:layout_marginTop="20dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"
            android:layout_below="@id/id_cover"
            android:layout_centerHorizontal="true"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            android:id="@+id/img_user"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_user"
            android:text="Đức Linh"
            android:textSize="28sp"
            android:textColor="#000"
            android:fontFamily="@font/open_sans_semi_bold"
            android:layout_centerHorizontal="true"
            android:backgroundTint="#00000000"
            android:id="@+id/tv_fullName"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view1"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCFCF"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Email"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:id="@+id/tv_email"
                android:fontFamily="@font/open_sans_semi_bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00000000"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:text="duongduclinh2000@gmail.com"
                android:id="@+id/tv_email_user"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCFCF"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Số điện thoại"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:id="@+id/tv_phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00000000"
                android:layout_alignParentRight="true"
                android:text="0397800195"
                android:hint="Chưa cập nhật"
                android:textSize="15sp"
                android:id="@+id/tv_phone_user"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCFCF"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Địa chỉ"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:fontFamily="@font/open_sans_semi_bold"
                android:id="@+id/tv_address"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00000000"
                android:layout_alignParentRight="true"
                android:text="Đăk Lăk"
                android:hint="Chưa cập nhật"
                android:textSize="15sp"
                android:id="@+id/tv_address_user"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CFCFCF"/>
    </LinearLayout>
</RelativeLayout>